DECLARE (arr) ARRAY [1000] OF INTEGER;
DECLARE (i, j, menor, temp) INTEGER;

insertionsort: PROCEDURE (size);
    i = 0;
    size = size - 1;
    LOOP;
        EXITWHEN i == size;

        j = i + 1;
        menor = i;
        LOOP;
            EXITWHEN j > size;
            IF arr[j] < arr[menor] THEN
                menor = j;
            ENDIF;
            j++;
        ENDLOOP;

        temp = arr[i];
        arr[i] = arr[menor];
        arr[menor] = temp;
        i++;
    ENDLOOP;
END insertionsort;

START;
    arr[0] = 4;
    arr[1] = 3;
    arr[2] = 1;
    arr[3] = 2;

    insertionsort(0, 3);
END;
